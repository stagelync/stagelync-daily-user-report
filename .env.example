# =============================================================================
# StageLync Daily Reports - Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# GCP Configuration
# -----------------------------------------------------------------------------
GCP_PROJECT_ID="stagelync-daily-user-reports"
GCP_REGION="asia-northeast1"

# VPN Configuration (from bartoss-project-vpn)
VPN_PROJECT_ID="bartoss-project-vpn"
VPC_CONNECTOR_NAME="bartoss-connector"

# -----------------------------------------------------------------------------
# MySQL Database
# -----------------------------------------------------------------------------
MYSQL_HOST="your-mysql-host"
MYSQL_PORT="3306"
MYSQL_USER="your-mysql-user"
MYSQL_PASSWORD="your-mysql-password"
MYSQL_DATABASE="your-database-name"

# -----------------------------------------------------------------------------
# Email (SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-gmail-app-password"

# Multiple recipients (comma-separated)
EMAIL_TO="laci+test@stagelync.com,bartosladi@gmail.com"

# -----------------------------------------------------------------------------
# Google Sheets
# -----------------------------------------------------------------------------

# Spreadsheet names (created automatically if not exists)
SHEET_NEW_USERS="StageLync - New Users Report"
SHEET_SUBSCRIPTIONS="StageLync - Subscriptions Report"

# -----------------------------------------------------------------------------
# Scheduler Configuration
# -----------------------------------------------------------------------------
# Cron expressions (default: 8 AM Tokyo time)
SCHEDULE_NEW_USERS="0 8 * * *"
SCHEDULE_SUBSCRIPTIONS="0 8 * * *"
TIMEZONE="Asia/Tokyo"

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
# Local: DEBUG, INFO, WARNING, ERROR
# Production: INFO, WARNING, ERROR
LOG_LEVEL="INFO"
